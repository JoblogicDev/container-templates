{
    "name": "${templateOption:nodeVersion:+Node.js }${templateOption:pythonVersion:+Python }Development Container",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/node:1": {
            "version": "${templateOption:nodeVersion}"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "${templateOption:pythonVersion}"
        }
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-json",
                "ms-python.python",
                "ms-vscode.vscode-typescript-next",
                "GitHub.copilot",
                "ms-vscode.vscode-eslint"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.defaultInterpreterPath": "/usr/local/bin/python"
            }
        }
    },

    "forwardPorts": [3000, 8000, 8080],

    "postCreateCommand": "echo 'Welcome to your development container!'",

    "remoteUser": "root"
}